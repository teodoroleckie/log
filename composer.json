{
  "name": "tleckie/log",
  "license": "MIT",
  "description": "Simple PSR-3 log",
  "type": "library",
  "homepage": "https://github.com/teodoroleckie/log",
  "authors": [
    {
      "name": "Teodoro Leckie Westberg",
      "email": "teodoroleckie@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Tleckie\\Log\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tleckie\\Log\\Tests\\": "tests/"
    }
  },
  "provide": {
  },
  "require": {
    "php": "^8",
    "psr/log": "^1.1"
  },
  "require-dev": {
    "infection/infection": "^0.21.5",
    "phpunit/phpunit": "^9.5",
    "mikey179/vfsstream": "^1.6",
    "friendsofphp/php-cs-fixer": "v3.0.0-beta.2"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "vendor-dir": "vendor",
    "bin-dir": "bin"
  },
  "scripts": {
    "fix-src": "./bin/php-cs-fixer fix src/ ",
    "fix-tests": "./bin/php-cs-fixer fix tests/",
    "tests": "./bin/phpunit ./tests/",
    "infection": "infection",
    "check": [
      "@fix-src",
      "@fix-tests",
      "@tests",
      "@infection"
    ]
  }
}
